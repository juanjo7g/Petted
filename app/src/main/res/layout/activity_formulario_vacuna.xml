<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.udea.pi.sjm.petted.vista.listadoVacuna.VacunaFormularioActivity">

    <TextView
        android:id="@+id/tvMascotaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etNombreVacuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:hint="Nombre de la vacuna"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/etFechaVacuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/etNombreVacuna"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/ibtnFechaVacuna"
        android:layout_toStartOf="@+id/ibtnFechaVacuna"
        android:editable="false"
        android:focusable="false"
        android:hint="Fecha de la vacuna" />

    <ImageButton
        android:id="@+id/ibtnFechaVacuna"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/etFechaVacuna"
        android:layout_alignEnd="@+id/etNombreVacuna"
        android:layout_alignRight="@+id/etNombreVacuna"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/oval"
        android:elevation="5dp"
        android:src="@mipmap/ic_calendar_white" />

    <EditText
        android:id="@+id/etFechaProximaVacuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/etFechaVacuna"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/ibtnFechaProximaVacuna"
        android:layout_toStartOf="@+id/ibtnFechaProximaVacuna"
        android:editable="false"
        android:focusable="false"
        android:hint="Fecha de la prÃ³xima vacuna" />

    <ImageButton
        android:id="@+id/ibtnFechaProximaVacuna"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/etFechaProximaVacuna"
        android:layout_alignEnd="@+id/etNombreVacuna"
        android:layout_alignRight="@+id/etNombreVacuna"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/oval"
        android:elevation="5dp"
        android:src="@mipmap/ic_calendar_white" />

    <Button
        android:id="@+id/btnFotoValidacionVacuna"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@color/ColorPrimary"
        android:onClick="onClickFotoValidacionVacuna"
        android:padding="12dp"
        android:text="Foto Sticker y Firma"
        android:textColor="@color/blanco"
        android:layout_below="@+id/etFechaProximaVacuna"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivFotoPreviaValidacionVacuna"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btnFotoValidacionVacuna"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
