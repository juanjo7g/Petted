<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.udea.pi.sjm.petted.vista.AsociarTagNFCActivity">

    <EditText
        android:id="@+id/etNombreMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:hint="Ingresar el nombre de la mascota"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/etNombrePropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNombreMascota"
        android:layout_marginTop="24dp"
        android:hint="Ingresar el nombre del propietario"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/etTelefonoPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNombrePropietario"
        android:layout_marginTop="24dp"
        android:hint="Ingresar el telefono del propietario"
        android:inputType="phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Tag NFC: "
        android:id="@+id/tvIdTagNFC"
        android:layout_below="@+id/etTelefonoPropietario"
        android:layout_marginTop="24dp"
        />

    <EditText
        android:id="@+id/etIdTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvIdTagNFC"
        android:layout_marginTop="10dp"
        android:hint="#idTag"
        android:inputType="text"
        android:enabled="false" />


    <Button
        android:id="@+id/btnAsociar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:padding="12dp"
        android:text="Asociar"
        android:textColor="@color/blanco"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp" />

</RelativeLayout>
